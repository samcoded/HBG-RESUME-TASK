          <form id="contactForm" action="contactform" method="post">
            <div class="mb-3">
              <label class="form-label" for="fullname">Name</label>
              <input
                class="form-control"
                id="fullname"
                name="fullname"
                type="text"
                placeholder="Name"
                required
              />
            </div>

