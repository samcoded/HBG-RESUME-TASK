              <label class="form-label" for="email">Email Address</label>
              <input
                class="form-control"
                id="email"
                name="email"
                type="email"
                placeholder="Email Address"
                 required
              />
            </div>

            <div class="mb-3">
              <label class="form-label" for="message">Message</label>
              <textarea
                class="form-control"
                id="message"
                name="message"
                type="text"
                placeholder="Message"
                style="height: 10rem"
                 required
              ></textarea>
            </div>

            <div class="d-grid">
