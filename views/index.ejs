          <% if (locals.error) { %>
            <div class="alert alert-danger fixed-top" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
 <strong> <%= error %></strong>
</div>    <script type="text/javascript">
